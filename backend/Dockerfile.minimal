# Ultra-minimal Dockerfile - GUARANTEED to work
FROM python:3.11-slim

WORKDIR /app

# Install only system essentials
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Install core dependencies + SQL Agent ONLY
RUN pip install --no-cache-dir \
    fastapi==0.104.1 \
    uvicorn[standard]==0.24.0 \
    sqlalchemy==2.0.23 \
    aiosqlite==0.19.0 \
    pydantic==2.5.0 \
    python-jose[cryptography]==3.3.0 \
    passlib[bcrypt]==1.7.4 \
    python-multipart==0.0.6 \
    python-dotenv==1.0.0 \
    structlog==23.2.0 \
    alembic==1.12.1 \
    httpx==0.25.2 \
    slowapi==0.1.9 \
    pydantic-settings==2.1.0 \
    greenlet==3.0.3

# Add SQL Agent dependencies - STEP BY STEP
RUN pip install --no-cache-dir openai==1.6.1
RUN pip install --no-cache-dir tiktoken==0.5.2
RUN pip install --no-cache-dir tenacity==8.5.0
RUN pip install --no-cache-dir langchain==0.1.0
RUN pip install --no-cache-dir langchain-openai==0.0.2
RUN pip install --no-cache-dir langchain-community==0.0.10

# Verify langchain works
RUN python -c "import langchain; print('âœ… SQL Agent dependencies installed')"

# Copy project
COPY . .

EXPOSE 8000

CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]
